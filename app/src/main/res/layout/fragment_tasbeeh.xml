<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".TasbeehFragment">

    <ImageView
        android:id="@+id/ivTasbeehBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:padding="80dp"
        android:src="@drawable/img_tasbeeh_background" />

    <ImageView
        android:id="@+id/ivTasbeehFrame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/img_tasbeeh_frame" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivTasbeehFrame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        tools:text="20" />

    <ImageView
        android:id="@+id/ivCounter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/ivTasbeehFrame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:contentDescription="@null"
        android:src="@drawable/img_counter_button" />

    <LinearLayout
        android:id="@+id/lytReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivTasbeehBg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivResetBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:src="@drawable/img_reset_button" />

        <ImageView
            android:id="@+id/ivStartAgain"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:src="@drawable/txt_img_start_again" />

    </LinearLayout>

</RelativeLayout>